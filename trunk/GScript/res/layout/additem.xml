<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="6px" android:scrollbarAlwaysDrawVerticalTrack="false">

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add script" android:textSize="20px"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name"></TextView>
<EditText android:layout_height="wrap_content" android:id="@+id/AddName" android:layout_width="fill_parent"></EditText>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Script"></TextView>
<EditText android:id="@+id/AddScript" android:layout_width="fill_parent" android:singleLine="false" android:scrollHorizontally="false" android:scrollbarStyle="insideOverlay" android:scrollbarAlwaysDrawVerticalTrack="false" android:layout_height="wrap_content" android:lines="2"></EditText>

<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/AddSu" android:text="Needs SU?" android:checked="true"></CheckBox><LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"><Button android:layout_height="wrap_content" android:text="Save" android:layout_width="100px" android:id="@+id/ButtonAddSave"></Button><Button android:layout_height="wrap_content" android:text="Cancel" android:layout_width="100px" android:id="@+id/ButtonAddCancel"></Button>
</LinearLayout>


</LinearLayout>
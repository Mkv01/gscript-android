<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="6px" android:scrollbarAlwaysDrawVerticalTrack="false">

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20px" android:text="Edit script"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name"></TextView>
<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/EditName"></EditText>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Script"></TextView>
<EditText android:layout_width="fill_parent" android:singleLine="false" android:scrollHorizontally="false" android:scrollbarStyle="insideOverlay" android:scrollbarAlwaysDrawVerticalTrack="false" android:layout_height="wrap_content" android:lines="2" android:id="@+id/EditScript"></EditText>

<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Needs SU?" android:checked="true" android:id="@+id/EditSu"></CheckBox><LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"><Button android:layout_height="wrap_content" android:text="Save" android:layout_width="100px" android:id="@+id/ButtonEditSave"></Button><Button android:layout_height="wrap_content" android:text="Cancel" android:layout_width="100px" android:id="@+id/ButtonEditCancel"></Button>
</LinearLayout>


</LinearLayout>